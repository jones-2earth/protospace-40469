<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2>ユーザー新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード（6文字以上）" %>
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"ユーザー名" %><br />
          <%= f.text_field :name, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :"プロフィール" %><br />
          <%= f.text_field :profile, autocomplete: "profile" %>
        </div>

        <div class="field">
          <%= f.label :"所属" %><br />
          <%= f.text_field :occupation, autocomplete: "occupation" %>
        </div>

        <div class="field">
          <%= f.label :"役職" %><br />
          <%= f.text_field :position, autocomplete: "position" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn%>
        </div>
      <% end %>

    </div>
  </div>
</div>